<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true">
<!--    <androidx.viewpager2.widget.ViewPager2-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="0.9"/>-->
    <LinearLayout android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/white">

        <TextView
            android:id = "@+id/left_month_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/page_left"
            android:textSize="30sp"
            android:layout_gravity="center_vertical"/>
        <Space
            android:layout_width="96dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id = "@+id/month_view_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="30sp"
            android:text ="MONTH"
            />
        <Space
            android:layout_width="96dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id = "@+id/right_month_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/page_right"
            android:textSize="30sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/days_grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background = "@color/white"
        android:layout_weight="0.8" />
</LinearLayout>
