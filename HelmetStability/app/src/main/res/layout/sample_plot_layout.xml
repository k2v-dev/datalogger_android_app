<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/accelerometerChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/graph_height"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_border"
        android:padding="5dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|center"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_alignTop="@id/accelerometerChart"
        android:text="SAMPLEDATA"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="25dp"/>


    <ImageView
        android:id="@+id/accFS"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@id/accelerometerChart"
        android:layout_alignBottom="@id/accelerometerChart"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/plot_graph"
        android:src="@drawable/full_screen_launcher_foreground" />
</RelativeLayout>