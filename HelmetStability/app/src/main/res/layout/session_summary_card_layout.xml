                android:layout_weight="6"
                android:padding="2dp"
                android:text="@string/algorithm_output1"
                android:textAlignment="viewStart"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:singleLine="true"
                />
        </TableRow>
